<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:style src="main.css" />

	<g:HTMLPanel>
		<header class="{style.site_head}">
			<div class="{style.header_cont}">
				<h1><a href="#">mr. hurley</a></h1> <!-- TODO InlineHyperlink -->
				<g:FlowPanel ui:field="headerNavigationPanel" />
			</div>
		</header>

		<div class="{style.main_content}">
			<g:FlowPanel ui:field="contentPanel" />
			<footer class="{style.bottom}">
				<p>Contents and resources released under Creative Commons License.</p>
				<p>Design and code by Piervincenzo Madeo - 2010 Mr Hurley Theme - A free HTM5 and CSS3 template.</p>
			</footer>
		</div>
	</g:HTMLPanel>

</ui:UiBinder>
